{% extends 'base.html.twig' %}
{% block title %}Car
{% endblock %}

{% block body %}
	<h1>Car</h1>

	<a href="{{ path('app_car_index') }}">back to list</a>

	<a href="{{ path('app_car_edit', {'id': car.id}) }}">edit</a>


	<table class="table">
		<tbody>
			<tr>
				<th><img src="{{ asset('uploads/' ~ car.photo) }}" alt="photo" width="100"></th>
				<td>
					<a href="{{ path('app_car_photo_edit',{id:car.id}) }}">changer la photo</a>
				</td>
			</tr>
			<tr>
				<th>Brand</th>
				<td>{{ car.brand }}</td>
			</tr>
			<tr>
				<th>Model</th>
				<td>{{ car.model }}</td>
			</tr>
			<tr>
				<th>Color</th>
				<td>{{ car.color }}</td>
			</tr>
			<tr>
				<th>Seat</th>
				<td>{{ car.seat }}</td>
			</tr>
			<tr>
				<th>Date</th>
				<td>{{ car.date ? car.date|date('Y-m-d') : '' }}</td>
			</tr>
			<tr>
				<th>RegistrationNumber</th>
				<td>{{ car.registrationNumber }}</td>
			</tr>


		</tbody>

	</table>
	<article>
		<h2>show room</h2>
		<a href="{{ path('app_car_showroom',{id:car.id}) }}">Edition show room</a>
		{% if show_room %}

			<h3>{{ show_room.name }}</h3>

			{% if show_room.images %}
				{% for image in show_room.images %}
					<img src="{{ asset('/uploads/' ~ image.name) }}" alt="Image" width="150">
				{% endfor %}

			{% endif %}
			<p>
				<a href="{{ path('app_galery_add_image',{id:show_room.id}) }}">Add images</a>
			</p>
		{% endif %}


	</article>

	{{ include('car/_delete_form.html.twig') }}
{% endblock %}
