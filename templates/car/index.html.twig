{% extends 'base.html.twig' %}
{% block title %}Car index
{% endblock %}

{% block body %}
	<h1>Car index</h1>
	<a href="{{ path('app_gestion_index') }}">Retour Gestion</a>

	<table class="table">
		<thead>
			<tr>
				<th></th>
				<th>Brand</th>
				<th>Model</th>
				<th>Color</th>
				<th>Seat</th>
				<th>Date</th>
				<th>RegistrationNumber</th>

				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for car in cars %}
				<tr>
					<td><img src="{{ asset('uploads/' ~ car.photo) }}" alt="photo" width="100"></td>
					<td>{{ car.brand }}</td>
					<td>{{ car.model }}</td>
					<td>{{ car.color }}</td>
					<td>{{ car.seat }}</td>
					<td>{{ car.date ? car.date|date('Y-m-d') : '' }}</td>
					<td>{{ car.registrationNumber }}</td>

					<td>
						<a href="{{ path('app_car_show', {'id': car.id}) }}">show</a>
						<a href="{{ path('app_car_edit', {'id': car.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="9">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_car_new') }}">Create new</a>
{% endblock %}
