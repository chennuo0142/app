{% extends 'base.html.twig' %}
{% block title %}Article
{% endblock %}

{% block body %}
	<h1>Article</h1>
	{% if article %}
		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ article.id }}</td>
				</tr>
				<tr>
					<th>Name</th>
					<td>{{ article.name }}</td>
				</tr>
				<tr>
					<th>Price</th>
					<td>{{ article.price }}</td>
				</tr>
				<tr>
					<th>TauxTva</th>
					<td>{{ article.tauxTva }}</td>
				</tr>
			</tbody>
		</table>
		<div class="d-flex justify-content-evenly">

			<a href="{{ path('app_article_edit', {'slug': article.slug}) }} " class="btn btn-primary">edit</a>
			{{ include('article/_delete_form.html.twig') }}

		</div>

	{% else %}
		<h2>Article Non trouver</h2>
	{% endif %}


	<a href="{{ path('app_article_index') }}">back to list</a>


{% endblock %}
