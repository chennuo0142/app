			<div class="col menu-card m-2">
				<a href="{{ path('app_profile_index') }}">
					<span class="menu-card-content-logo"><img src="/image/ico/utilisateur.svg" alt=""></span>
					<span class="menu-card-content-text">Profile</span>
				</a>
			</div>
			{% if is_granted('ROLE_ADMIN') %}
				<div class="col menu-card m-2">
					<a href="{{ path('app_profile_index') }}">
						<span class="menu-card-content-logo"><img src="/image/ico/utilisateur.svg" alt=""></span>
						<span class="menu-card-content-text">Reservations</span>
					</a>
				</div>
			{% endif %}
