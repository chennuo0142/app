<form method="post" action="{{ path('app_driver_delete', {'id': driver.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
	<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ driver.id) }}">
	<button class="btn btn-danger ms-auto">
		<i class="bi bi-trash">Delete</i>
	</button>
</form>
