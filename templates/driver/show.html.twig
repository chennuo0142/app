{% extends 'base.gestion.html.twig' %}

{% block title %}Driver
{% endblock %}

{% block body %}
	<h1>Driver</h1>
	<a href="{{ path('app_driver_index') }}">Retour Liste</a>


	<div class="card text-bg-light mb-3" style="max-width: 18rem;">
		<div class="card-header">Code Chauffeur</div>
		<div class="card-body">
			<h5 class="card-title">{{ driver.codeReservation }}</h5>
			<p class="card-text">Ce code a communiquer aux client est a usage unique</p>
			{{ include('driver/_code_reservation_form.html.twig') }}
		</div>
	</div>


	<table class="table">
		<tbody>
			<tr>
				<th>Photo</th>
				<td><img src="{{ asset('uploads/' ~ driver.photo) | imagine_filter('miniature') }}" alt="photo" width="150"><a href="{{ path('app_driver_photo_edit',{id:driver.id}) }}">changer la photo</a>
				</td>

			</tr>
			<tr>
				<th>Id</th>
				<td>{{ driver.id }}</td>
			</tr>
			<tr>
				<th>Name</th>
				<td>{{ driver.name }}</td>
			</tr>
			<tr>
				<th>FirstName</th>
				<td>{{ driver.firstName }}</td>
			</tr>
			<tr>
				<th>Phone</th>
				<td>{{ driver.phone }}</td>
			</tr>
			<tr>
				<th>Email</th>
				<td>{{ driver.email }}</td>
			</tr>
			<tr>
				<th>Adress</th>
				<td>{{ driver.adress }}</td>
			</tr>
			<tr>
				<th>City</th>
				<td>{{ driver.city }}</td>
			</tr>
			<tr>
				<th>Cp</th>
				<td>{{ driver.cp }}</td>
			</tr>
			<tr>
				<th>CreatedAt</th>
				<td>{{ driver.createdAt ? driver.createdAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_driver_index') }}">back to list</a>

	<a href="{{ path('app_driver_edit', {'id': driver.id}) }}">edit</a>

	{{ include('driver/_delete_form.html.twig') }}
{% endblock %}
