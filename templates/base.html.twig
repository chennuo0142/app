<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>

		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<link
		href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet">


		{# style #}
		{% block stylesheet %}{% endblock %}
		<link
		rel="stylesheet" href="{{ asset('css/style.css') }}">
		{# script #}
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"></script>

		{% block javascripts %}{% endblock %}
		<script src="{{ asset('js/app.js') }}" defer></script>

	</head>
	<body>


		{% include "_include/nav.html.twig" %}

		{% if app.user %}

			{% include "_include/_offcanvas.html.twig" %}
		{% endif %}

		<div
			class="container">

			{# read and display all flash messages #}
			{% for label, messages in app.flashes %}
				{% for message in messages %}
					<div class="alert-{{ label }}">
						{{ message }}
					</div>
				{% endfor %}
			{% endfor %}
			<div class="body-container"> {% block body %}{% endblock %}

				</div>


			</div>
			{# <div class="footer-container fixed-bottom">
										{% include "_include/footer.html.twig" %}
									</div> #}
		</body>
	</html>
